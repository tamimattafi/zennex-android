<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="HorizontalDividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:drawable/divider_horizontal_dark</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/colorForeground</item>
        <item name="android:textColor">@color/colorForeground</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButtonAccent" parent="MaterialButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>


    <style name="MaterialButtonRed" parent="MaterialButton">
        <item name="backgroundTint">@color/colorLightRed</item>
    </style>

</resources>
